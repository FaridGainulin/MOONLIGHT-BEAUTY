.reasons-section
  // background-image: url('../images/reasons-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color $color-blue

  &__container
    position relative
    z-index 1

  &__icon-shine
    position: absolute
    z-index -1
    width: 250px;
    height: auto;
    bottom: 198px;
    right: -110px;
    +above($breakpoints.sm)
      width: 423px;
      bottom: 67px;
      right: -148px;
    +above($breakpoints.md)
      width: 658px;
      bottom: 47px;
      right: -198px;
    +above($breakpoints.xxl)
      width: 958px;
      bottom: 0;
      right: -311px;

  &__box
    position relative
    display: flex
    flex-direction: column
    align-items: center
    background-color #fff
    +above($breakpoints.sm)
      align-items: center
      flex-direction: row
      align-items: flex-start
      justify-content space-between
    &:after
      content: ""
      position: absolute
      z-index -1
      width 100vw
      height: 100%
      top: 0
      right: 0
      background-color #fff

  &__box-left
    overflow hidden

  &__title
    display: flex
    align-items: center
    justify-content center
    gap: 5px
    color: #000
    padding 10px 0 5px
    +above($breakpoints.sm)
      justify-content start
      padding 40px 0 15px
    +above($breakpoints.md)
      gap: 10px
      padding 70px 0 17px
    +above($breakpoints.xxl)
      padding 115px 0 21px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      & > :last-child
        border: none

  &__card
    width 280px !important
    display: flex
    flex-direction: row-reverse
    align-items: center
    gap: 10px
    padding 10px 0
    border-bottom: 1px solid #1B1919
    color: #1B1919
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      width 390px !important
    +above($breakpoints.md)
      width: 510px !important;
      padding 15px 0
    +above($breakpoints.xxl)
      padding 20px 0
      width 592px !important

  &__card-icon
    width 10px
    height: 20px
    +above($breakpoints.sm)
      width 13px
      height: 26px
    +above($breakpoints.md)
      width 17px
      height: 34px
    +above($breakpoints.xxl)
      width 20px
      height: 40px

  &__img
    width 170px
    height: auto
    margin: -20px 0 0 138px;
    +above($breakpoints.sm)
      margin 0
      width 270px
    +above($breakpoints.md)
      width 380px
    +above($breakpoints.xxl)
      width 490px

  &__bottom
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    text-align: center
    padding 15px 10px
    +above($breakpoints.sm)
      padding 30px 5px
    +above($breakpoints.md)
      padding 40px 5px
    +above($breakpoints.xxl)
      padding 50px 5px
      height: 275px

  &__bottom-text
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 15px 0 20px
    +above($breakpoints.md)
      padding 17px 0 25px
    +above($breakpoints.xxl)
      padding 20px 0 30px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      gap: 6px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 10px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 188px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 288px !important

  &__agree-wrapper
    display: flex
    justify-content center
    margin-top 10px
    +above($breakpoints.md)
      margin-top 16px

  &__logo
    position: absolute
    width: 220px;
    height: auto;
    bottom: 215px;
    right: -106px;
    +above($breakpoints.sm)
      width: 320px;
      bottom: 107px;
      right: -151px;
    +above($breakpoints.md)
      width: 430px;
      bottom: 127px;
      right: -202px;
    +above($breakpoints.xxl)
      width 628px
      bottom: 117px
      right: -296px
