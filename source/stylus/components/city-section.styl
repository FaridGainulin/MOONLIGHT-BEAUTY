.city-section
  // background-image: url('../images/city-section-bg.jpg')
  // background-repeat: no-repeat
  // background-size: cover
  // background-position: center
  background-color $color-blue
  overflow hidden

  &__container
    position relative
    z-index 1
    text-align: center
    padding 20px 0
    +above($breakpoints.sm)
      text-align: start
      padding 50px 0 20px 20px
    +above($breakpoints.md)
      padding 80px 0 25px 30px
    +above($breakpoints.xxl)
      padding 130px 0 30px 49px
    &:after
      content: ""
      position: absolute
      z-index -1
      border-radius: 50%
      background: linear-gradient(180deg, #d8e4f2 0%, #3f98ff 100%);
      filter: blur(70px);
      transform: rotate(-35deg);
      width: 500px;
      height: 200px;
      top: 216px;
      left: -543px;
      +above($breakpoints.sm)
        width: 166px;
        height: 651px;
        top: -200px;
        left: -348px;
      +above($breakpoints.md)
        width: 267px;
        height: 810px;
        top: -200px;
        left: -478px;
      +above($breakpoints.xxl)
        width: 402px;
        height: 1018px;
        top: -310px;
        left: -782px;

  &__logo-bg
    position: absolute
    z-index -1
    width: 360px;
    height: auto;
    bottom: 521px;
    left: 29px;
    +above($breakpoints.sm)
      width: 390px;
      left: 20px;
      bottom: 103px;
    +above($breakpoints.md)
      width: 590px;
      left: 31px;
      bottom: 99px;
    +above($breakpoints.xxl)
      width 717px
      left: 49px
      bottom: 141px

  &__icon-star
    position: absolute
    z-index -1
    width: 10px;
    height: 20px;
    top: 20px;
    left: 30px;
    +above($breakpoints.sm)
      width: 14px;
      height: 28px;
      left: 0;
      top: 53px;
      left: 0px;
    +above($breakpoints.md)
      width: 17px;
      height: 34px;
      top: 85px;
      left: 2px;
    +above($breakpoints.xxl)
      width: 21px;
      height: 42px;
      top: 138px;
      left: 10px;

  &__box
    display: flex
    flex-direction: column
    align-items: center
    gap: 20px
    margin-bottom 30px
    +above($breakpoints.sm)
      gap: 10px
      flex-direction: row
      justify-content space-between
      margin-bottom 50px
    +above($breakpoints.md)
      margin-bottom 70px
    +above($breakpoints.xxl)
      margin-bottom 90px

  &__sub-title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 25px 0 40px
    +above($breakpoints.md)
      padding 35px 0 60px
    +above($breakpoints.xxl)
      padding 46px 0 99px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 380px
      flex-direction: row
      flex-wrap: wrap
      gap: 6px
    +above($breakpoints.md)
      width 450px
      gap: 8px
    +above($breakpoints.xxl)
      width 543px
      gap: 10px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 185px !important
      +above($breakpoints.md)
        width 220px !important
      +above($breakpoints.xxl)
        width 266px !important

  &__agree-wrapper
    display: flex
    justify-content center
    margin-top 10px
    +above($breakpoints.sm)
      justify-content start
    +above($breakpoints.md)
      margin-top 16px

  &__img
    width 280px
    height: auto
    +above($breakpoints.sm)
      width: 303px;
    +above($breakpoints.md)
      width: 388px;
    +above($breakpoints.xxl)
      width 490px
