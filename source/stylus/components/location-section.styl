.location-section
  // background-image: url('../images/location-section-bg.jpg')
  // background-repeat: no-repeat
  // background-size: cover
  // background-position: center
  background-color #fff

  &__container
    position relative
    z-index 1
    color: #000
    text-align: center
    padding 20px 0 0
    +above($breakpoints.sm)
      text-align: start
      padding 50px 0 0
    +above($breakpoints.md)
      padding 80px 0 0
    +above($breakpoints.xxl)
      padding 130px 0 0

  &__box
    display: flex
    flex-direction: column-reverse
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-end
      gap: 15px
    +above($breakpoints.md)
      gap: 30px
    +above($breakpoints.xxl)
      gap: 50px

  &__img
    width 308px
    height: auto
    +above($breakpoints.sm)
      width 234px
    +above($breakpoints.md)
      width 292px
    +above($breakpoints.xxl)
      width 358px

  &__sub-title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 30px 0 20px
    +above($breakpoints.md)
      padding 35px 0 25px
    +above($breakpoints.xxl)
      padding 44px 0 38px

  &__bottom
    position relative
    width 100%
    background-color $color-blue
    padding 15px 10px
    +above($breakpoints.sm)
      padding 30px 10px
    +above($breakpoints.md)
      padding 40px 18px
    +above($breakpoints.xxl)
      padding 50px 40px
      height: 179px
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color $color-blue
      width 100vw
      height: 100%
      top: 0
      left: 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      gap: 6px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 10px

  &__agree-wrapper
    display: flex
    justify-content center
    margin-top 10px
    +above($breakpoints.md)
      margin-top 16px

.input-city-position
  margin-top: -1px;
  margin-left: -21px;
  +above($breakpoints.sm)
    margin-left: -16px;
  +above($breakpoints.md)
    margin-left: -18px;
  +above($breakpoints.xxl)
    margin-left: -19px;

.location-item
  width 280px !important
  +above($breakpoints.sm)
    width 225px !important
  +above($breakpoints.md)
    width 300px !important
  +above($breakpoints.xxl)
    width 354px !important
