.input
  height: 40px
  width 100%
  padding: 0 20px;
  font-family: 'Gilroy-Regular'
  font-weight: 400
  font-size: 14px;
  line-height: 110%
  color: #6D7894
  border: 1px solid #6d7894;
  border-radius: 50px;
  backdrop-filter: blur(8px);
  background: rgba(255, 255, 255, 0.1);
  position relative
  // overflow hidden

  &.active
    .input__progress
      opacity 1
      min-width: 40px
      span
        opacity 1
  &__progress
    position: absolute
    height: 100%
    top: 0
    left: 0
    background: #9CFEF4
    opacity 0
    min-width: 0
    display: flex
    align-items: center
    justify-content: center
    font-size: 16px
    line-height: 16px
    transition: min-width 1s, opacity 0.8s
    color: #000
    font-weight: bold
    border-radius: 1500px
    +above($breakpoints.xxl)
      font-size: 20px
      line-height: 20px
    span
      opacity 0
      transition: 2s

  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #9CFEF4
  &:focus
    color: #fff
    caret-color: #9CFEF4
    border 1px solid #9CFEF4
    box-shadow: 3px 3px 5px 0px #9CFEF4
    background: rgba(255, 255, 255, 0.1);
    &::placeholder
      color: #6D7894
  &::placeholder
    color: #6D7894
  +above($breakpoints.sm)
    padding: 0 15px;
    font-size: 12px;
    height: 35px
  +above($breakpoints.md)
    padding: 0 17px;
    font-size: 16px;
    height: 40px
  +above($breakpoints.xxl)
    padding: 0 18px;
    font-size: 18px;
    height: 44px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    background: rgba(255, 255, 255, 0.1);
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--textarea
    outline none
    border: none
    padding: 10px 10px 10px 19px
    resize: none
    height: 60px
    width 280px
    border-radius: 10px
    +above($breakpoints.sm)
      padding: 15px 10px 10px 15px
      width 220px
      height: 145px
    +above($breakpoints.md)
      border-radius: 15px
      padding: 17px 10px 10px 17px
      width 240px
      height: 166px;
    +above($breakpoints.xxl)
      border-radius: 20px
      padding: 19px 10px 10px 19px
      width 290px
      height: 188px

